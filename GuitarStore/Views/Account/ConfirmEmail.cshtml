@{
    ViewBag.Title = "ConfirmEmail";
}
<div class="container-fluid">
    @if (ViewBag.Success != null)
    {
        <div class="row">
            <div id="alert" class="col-md-4 col-md-offset-4 alert alert-success">Your email has been confirmed!</div>
        </div>
    }
    else
    {
        <div class="col-md-4 col-md-offset-4 well">
            <h2>Email not verified.</h2>
        </div>
    }
    <div class="row">
        <div class="col-md-4 col-md-offset-4 well text-center">
            @Html.ActionLink("Go to home page", "GoHome", "Account", new { @class = "btn btn-primary" });
        </div>
    </div>

    
</div>