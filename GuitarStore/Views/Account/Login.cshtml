@{
    ViewBag.Title = "Login";
}

<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        @if (TempData.ContainsKey("LogFailed"))
        {
            <div class="alert alert-danger text-center">
                @TempData["LogFailed"]
            </div>
            <div style="display:none">@TempData.Remove("LogFailed")</div>
        }
        <div class="well text-center">
            <h2>@ViewBag.Title</h2>
            @using (Html.BeginForm())
            {
                <div class="form-group form-inline">
                    <div class="row">
                        <label for="username" class="control-label">Username</label>
                        <input = name="username" class="form-control" type="text" />
                    </div>
                    <div class="row"></div>
                    <label for="password" class="control-label">Password</label>
                    <input name="password" class="form-control" type="password" />
                </div>
                <div class="row">
                    <input type="submit" value="@ViewBag.Title" class="btn btn-primary" />
                </div>
            }
            <div class="row ">
                <div class="col-md-10 col-md-offset-1">
                    <div class="text-center">
                        <div class="box">Don't have an account?</div>
                        <div class="box">@Html.ActionLink("Click here to Register for a new account", "Register", "Account", new { @class = "btn btn-primary" })</div>
                    
                        <div class="box">Forgot your password?</div>
                        <div class="box">@Html.ActionLink("Click here to Reset your password", "ForgotPassword", "Account", new { @class= "btn btn-primary"})</div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
