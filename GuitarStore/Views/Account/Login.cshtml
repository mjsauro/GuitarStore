@{
    ViewBag.Title = "Login";
}

<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>

        }
        <div class="well text-center">
            <h2>@ViewBag.Title</h2>
            @using (Html.BeginForm())
            {
                <div class="form-group form-inline">
                    <div class="row">
                        <label for="username" class="control-label col-md-2 col-md-offset-2">Username</label>
                        <input = name="username" class="form-control col-md-6" type="text" />
                    </div>
                    <div class="row">
                        <label for="password" class="control-label col-md-2 col-md-offset-2">Password</label>
                        <input name="password" class="form-control col-md-10" type="password" />
                    </div>
                <div class="row">
                    <input type="submit" value="@ViewBag.Title" class="btn btn-primary box" />
                </div>
                    </div>
            }
            <div class="row ">
                <div class="col-md-10 col-md-offset-1">
                    <div class="text-center">
                        <div class="box">Don't have an account?</div>
                        <div class="box">@Html.ActionLink("Click here to Register for a new account", "Register", "Account", new { @class = "btn btn-primary" })</div>

                        <div class="box">Forgot your password?</div>
                        <div class="box">@Html.ActionLink("Click here to Reset your password", "ForgotPassword", "Account", new { @class = "btn btn-primary" })</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>