
@model GuitarStore.Models.Guitar
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xs12, col-md-4 col-md-offset-4">
        <div class="panel">
            <div class="panel-heading">
                <h3>@Model.Make @Model.Mod</h3>
            </div>
            <div class="panel-body">
                <p>@Model.Color</p>
                <p>@Model.Description</p>
                <p>@Model.Price.ToString("C")</p>
                <img class="img-responsive" src="@Model.Image" />
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.ID)
                    @Html.HiddenFor(m => m.Make)
                   @Html.HiddenFor(m => m.Mod)
                    @Html.HiddenFor(m => m.Description)
                    @Html.HiddenFor(m => m.Price)
                    @Html.HiddenFor(m => m.Quantity)
                    
                    <input type="submit" class="btn btn-default" value="Add to Cart" />
                }

            </div>
            <div class="panel-footer">
                @Html.ActionLink("Return to Guitars", "List", "Guitar")
            </div>
        </div>
    </div>
</div>
