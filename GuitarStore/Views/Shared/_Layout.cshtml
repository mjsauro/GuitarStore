<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Matt's Guitar Store</title>
    @Styles.Render("/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><img class="img-responsive" id="guitar-icon" src="~/images/guitar-icon.png" alt="guitar-icon" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-pills">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Guitars", "List/Guitar", "Product")</li>
                    <li>@Html.ActionLink("Amplifiers", "List/Amplifier", "Product")</li>
                    <li>@Html.ActionLink("Effects Pedals", "List/Effect", "Product")</li> 
                    <li>@Html.ActionLink("Our Location", "Location", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Shopping Cart", "Index", "Cart")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="pull-right">Logged in as @User.Identity.Name</li>
                        <li class="pull-right">@Html.ActionLink("Sign Out", "SignOut", "Account")</li>
                    } else if (User.Identity.IsAuthenticated == false)
                    {
                        <li class="pull-right">@Html.ActionLink("Register", "Register", "Account")</li>
                        <li class="pull-right">@Html.ActionLink("Log In", "Login", "Account")</li>
                    }
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        
    </div>
    <footer>
                        <li style="color:white;"> &copy; @DateTime.Now.Year - Matt's Guitar Store</li>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>